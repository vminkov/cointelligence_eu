<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="COINTELLIGENCE">
		<class>eu.cointelligence.model.User</class>
		<class>eu.cointelligence.model.Transaction</class>
		<class>eu.cointelligence.model.Statement</class>
		<class>eu.cointelligence.model.Account</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:derby://localhost:1527/sample;create=true" />
			<property name="javax.persistence.jdbc.user" value="cointelligence" />
			<property name="javax.persistence.jdbc.password" value="cointelligence" />
		</properties>
	</persistence-unit>
</persistence>
